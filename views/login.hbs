<form action="/authenticate" method="POST">
    <h1 class="form__title">{{__ 'Login'}}</h1>
    <span>{{form.message}}</span>
    <div class="form-input__container">
        <input class="form__text-input" name="username" maxlength="255" type="text" placeholder="{{__ 'userName'}}*"
            value="{{form.username}}">
        <input class="form__text-input" name="password" type="password" placeholder="{{__ 'password'}}*">
        <button class="form__button" id="authenticate_sumbit" type="submit">{{__ 'login'}}</button>
    </div>
</form>