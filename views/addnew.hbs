 <form action="/news/add" method="POST" enctype="multipart/form-data">
                    <span>{{form.message}}</span>
                    <div class="addnew-container">
                        <input name="title" maxlength="255" type="text" placeholder="Заголовок*" value="{{form.title}}">
                        <textarea name="messageShort" cols="30" maxlength="255" rows="10" placeholder="Краткое описание" value=="{{form.messageShort}}"></textarea>
                        <textarea name="message" cols="30" maxlength="2048" rows="10" placeholder="Новость*" value="{{form.message}}"></textarea>
                        <label>Фото</label>
                        <input name="photo" type="file">
                        <input name="photoDescription" maxlength="255" type="text" placeholder="Описание фото" value="{{form.photoDescription}}">
                        <button type="submit">Создать</button>
                    </div>
</form>