<link rel="stylesheet" type="text/css" href="/static/css/news.css" />
<div class="template-container">
    {{#if isAdmin}}
    <div class="news-btn-container">
        <a href="/events/add">{{__ 'add'}}</a>
    </div>
    {{/if}}
    {{#if Events.0.id}}
        {{#each Events}}
           <div class="news-block">  
                <a href="{{uriWithLocale 'events' this.id }}"><p>{{this.title}}</p></a>
                <p>{{#formatTime this.publishDate}}{{/formatTime}}</p>
                <p>{{this.descriptionShort}}</p>
            </div>
        {{/each}}
    {{else}}
        <p>{{__ 'noEvents'}}</p>
    {{/if}}
</div>
