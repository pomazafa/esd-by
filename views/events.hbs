<link rel="stylesheet" type="text/css" href="/static/css/news.css" />
<div class="content-wrapper">
    {{#if isAdmin}}
    <div class="news-btn-container">
        <a class="content__link" href="/events/add">{{__ 'add'}}</a>
    </div>
    {{/if}}
    {{#if Events.0.id}}
    {{#each Events}}
    <div class="content__items">
        <a href="{{uriWithLocale 'events' this.id }}">
            <p>{{this.title}}</p>
        </a>
        <p>{{#formatTime this.publishDate}}{{/formatTime}}</p>
        <p>{{this.descriptionShort}}</p>
    </div>
    {{/each}}
    {{else}}
    <p>{{__ 'noEvents'}}</p>
    {{/if}}
</div>