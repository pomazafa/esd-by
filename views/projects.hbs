<link rel="stylesheet" type="text/css" href="/static/css/news.css" />
<div class="content-wrapper">
    {{#if isAdmin}}
    <div class="content__btn-containerr">
        <a class="content__link" href="/projects/add">{{__ 'add'}}</a>
    </div>

    {{/if}}
    {{#if Projects.0.id}}
    <div class="content__items">
        {{#each Projects}}
        <div class="content__item">
            <a class="content__link" href="{{uriWithLocale 'projects' this.id }}">
                <p>{{this.title}}</p>
            </a>
            <p>{{this.messageShort}}</p>
            <p class="content__date">{{#formatTime this.publishDate}}{{/formatTime}}</p>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p>{{__ 'noProjects'}}</p>
    {{/if}}
</div>