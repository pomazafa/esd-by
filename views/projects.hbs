<div>
    {{#if isAdmin}}
        <a href="/projects/add">{{__ 'add'}}</a>
    {{/if}}
    {{#if Projects.0.id}}
        {{#each Projects}}
            <div>
                <a href="{{uriWithLocale 'projects' this.id }}"><p>{{this.title}}</p></a>
                <p>{{#formatTime this.publishDate}}{{/formatTime}}</p>
                <p>{{this.messageShort}}</p>
            </div>
        {{/each}}
    {{else}}
        <p>{{__ 'noProjects'}}</p>
    {{/if}}
</div>
