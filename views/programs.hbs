<link rel="stylesheet" type="text/css" href="/static/css/news.css" />
<div class="template-container">
    {{#if isAdmin}}
    <div class="news-btn-container">
        <a href="/programs/add">{{__ 'add'}}</a>
    </div>        
    {{/if}}
    {{#if Programs.0.id}}
        {{#each Programs}}
            <div class="news-block">  
                <a href="{{uriWithLocale 'programs' this.id }}"><p>{{this.title}}</p></a>
                <p>{{#formatTime this.publishDate}}{{/formatTime}}</p>
                <p>{{this.messageShort}}</p>
            </div>
        {{/each}}
    {{else}}
        <p>{{__ 'noPrograms'}}</p>
    {{/if}}
</div>
